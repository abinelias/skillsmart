<div id="container" style="width:100%">
	<div id="header" style="height:50px;margin-left: 3%;margin-top: 1.5%;">
		<%= link_to image_tag('/images/logo.jpg') , url_for({:controller => 'home', :action => 'homePage'}) %> 
	</div>
	<div id="menu" style="height:700px;width: 200px;float:left;">
